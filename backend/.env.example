# .env.example

# --- PostgreSQL Database Configuration ---
# Connection string for the application database
DATABASE_URL=postgresql://postgres:mysecretpassword@localhost:5432/finsim_db

# --- Redis Configuration ---
# Connection string for Redis (used for messaging/caching)
REDIS_URL=redis://localhost:6379/0

# Debug settings
DEBUG=false

# --- Logging Configuration ---
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FORMAT="[%(asctime)s] %(levelname)s: %(message)s"
LOG_DATE_FORMAT="%Y-%m-%d %H:%M:%S"
# Path to the log file. Make sure the directory exists.
LOG_FILE=logs/app.log
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=5